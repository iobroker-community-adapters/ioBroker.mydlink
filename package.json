{
  "name": "iobroker.mydlink",
  "version": "1.3.2",
  "description": "connects mydlink plugs and sensors to ioBroker",
  "author": {
    "name": "Garfonso",
    "email": "garfonso@mobo.info"
  },
  "contributors": [
    {
      "name": "Garfonso"
    }
  ],
  "homepage": "https://github.com/iobroker-community-adapters/ioBroker.mydlink",
  "license": "MIT",
  "keywords": [
    "mydlink",
    "dlink",
    "dsp-w215",
    "dsp-w115",
    "dch-s150"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:iobroker-community-adapters/ioBroker.mydlink.git"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^2.6.8",
    "@xmldom/xmldom": "^0.8.8",
    "axios": "^1.4.0",
    "dlink_websocketclient": "^0.5.5",
    "mdns-discovery": "^0.2.6"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.5.9",
    "@alcalzone/release-script-plugin-iobroker": "^3.5.9",
    "@alcalzone/release-script-plugin-license": "^3.5.9",
    "@iobroker/adapter-dev": "^1.2.0",
    "@iobroker/testing": "^4.1.0",
    "@tsconfig/node16": "^1.0.4",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/iobroker": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.18.35",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.15",
    "@types/sinon-chai": "^3.2.9",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.42.0",
    "mocha": "^10.2.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.1",
    "sinon": "^15.1.0",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.3"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit",
    "lint": "eslint --ext .ts src/",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/iobroker-community-adapters/ioBroker.mydlink/issues"
  },
  "readmeFilename": "README.md"
}
