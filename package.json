{
    "name": "iobroker.mydlink",
    "version": "1.3.6",
    "description": "connects mydlink plugs and sensors to ioBroker",
    "author": {
        "name": "Garfonso",
        "email": "garfonso@mobo.info"
    },
    "contributors": [
        {
            "name": "Garfonso"
        }
    ],
    "homepage": "https://github.com/iobroker-community-adapters/ioBroker.mydlink",
    "license": "MIT",
    "keywords": [
        "mydlink",
        "dlink",
        "dsp-w215",
        "dsp-w115",
        "dch-s150",
        "ioBroker"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:iobroker-community-adapters/ioBroker.mydlink.git"
    },
    "engines": {
        "node": ">=20.0.0"
    },
    "dependencies": {
        "@iobroker/adapter-core": "^3.2.3",
        "@xmldom/xmldom": "^0.9.8",
        "axios": "^1.13.2",
        "dlink_websocketclient": "^0.5.5",
        "mdns-discovery": "^0.2.6"
    },
    "devDependencies": {
        "@alcalzone/release-script": "^5.0.0",
        "@alcalzone/release-script-plugin-iobroker": "^4.0.0",
        "@alcalzone/release-script-plugin-license": "^4.0.0",
        "@alcalzone/release-script-plugin-manual-review": "^4.0.0",
        "@iobroker/adapter-dev": "^1.5.0",
        "@iobroker/eslint-config": "^2.2.0",
        "@iobroker/testing": "^5.2.2",
        "@iobroker/types": "^7.0.7",
        "@tsconfig/node20": "^20.1.7",
        "@types/node": "^20.4.9 < 21",
        "rimraf": "^6.1.2",
        "source-map-support": "^0.5.21",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.3"
    },
    "main": "build/main.js",
    "files": [
        "admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
        "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
        "build/",
        "www/",
        "io-package.json",
        "LICENSE"
    ],
    "scripts": {
        "prebuild": "rimraf build",
        "build": "build-adapter ts",
        "watch": "build-adapter ts --watch",
        "prebuild:ts": "rimraf build",
        "build:ts": "build-adapter ts",
        "watch:ts": "build-adapter ts --watch",
        "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
        "test:package": "mocha test/package --exit",
        "test:integration": "mocha test/integration --exit",
        "test": "npm run test:ts && npm run test:package",
        "check": "tsc --noEmit",
        "lint": "eslint -c eslint.config.mjs src/",
        "translate": "translate-adapter",
        "release": "release-script"
    },
    "bugs": {
        "url": "https://github.com/iobroker-community-adapters/ioBroker.mydlink/issues"
    },
    "readmeFilename": "README.md"
}
